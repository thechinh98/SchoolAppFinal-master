<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <ImageView

            android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/profile"
               app:layout_constraintBottom_toBottomOf="parent"
               android:layout_marginBottom="14dp"
               android:layout_marginLeft="21dp"
               app:layout_constraintLeft_toLeftOf="parent" android:id="@+id/img_profile"
               app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="14dp"/>
    <TextView android:id="@+id/txt_username"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Vernon Bradley"
              android:textSize="15sp"
              android:textColor="#e9446a"
              android:fontFamily="@font/montserrat_bold"
              android:layout_marginTop="21dp"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/img_profile"
              android:layout_marginLeft="11dp" android:layout_marginStart="11dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Shall we meet today"
              android:textSize="13sp"
              android:fontFamily="@font/montserrat"
              app:layout_constraintStart_toStartOf="@+id/txt_username"

              android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_username"
              app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="23dp"
              android:id="@+id/txt_mes"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="1" android:background="@drawable/oval_unread_mes" android:gravity="center"
              android:textColor="#fff"
              app:layout_constraintTop_toTopOf="@+id/txt_username"
              app:layout_constraintBottom_toTopOf="@+id/txt_mes" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:id="@+id/txt_unread_mes"/>
    <TextView
            android:text="5 : 45 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_last_mes"
            app:layout_constraintTop_toTopOf="@+id/txt_mes" app:layout_constraintBottom_toBottomOf="@+id/txt_mes"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            android:textSize="10sp" android:fontFamily="@font/montserrat"
            android:layout_marginRight="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>