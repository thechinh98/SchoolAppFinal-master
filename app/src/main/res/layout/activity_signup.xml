<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivitySignup">
    <ImageView
            android:id="@+id/bg_blob"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:src="@drawable/blob_bg"
            android:scaleType="fitXY" android:layout_marginTop="0dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/group_4" app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="15dp"
               android:layout_marginStart="15dp" android:layout_marginTop="44dp" android:id="@+id/imageView"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Hello!\nSign up to get started" android:fontFamily="@font/montserrat"
              android:gravity="center"
              android:id="@+id/txtEmailAddress"
              android:textColor="#fff" android:textSize="18sp" android:lineHeight="27sp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/glitters"
               app:layout_constraintTop_toTopOf="@+id/img_profile"
               app:layout_constraintBottom_toBottomOf="@+id/img_profile"
               app:layout_constraintStart_toStartOf="@+id/img_profile"
               app:layout_constraintEnd_toEndOf="@+id/img_profile" android:id="@+id/imageView2"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/profile_main"
               android:id="@+id/img_profile" app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginTop="170dp" app:layout_constraintTop_toBottomOf="@+id/bg_blob"
               app:layout_constraintTop_toTopOf="parent"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="FULL NAME" android:textSize="10sp" android:lineHeight="10sp"
              android:fontFamily="@font/montserrat"
              android:textColor="#161f3d"
              app:layout_constraintTop_toBottomOf="@+id/img_profile" android:layout_marginStart="30dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="30dp"
              android:layout_marginTop="40dp" android:id="@+id/textView4"/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:fontFamily="@font/montserrat" android:textSize="15sp"
              android:textColor="#161f3d"
              android:inputType="text"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="30dp" android:layout_marginStart="30dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="30dp" android:layout_marginRight="30dp"
              app:layout_constraintTop_toBottomOf="@+id/textView4" android:id="@+id/etxt_username_signup"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="EMAIL ADDRESS" android:textSize="10sp" android:lineHeight="10sp"
              android:fontFamily="@font/montserrat"
              android:textColor="#161f3d"
              app:layout_constraintStart_toStartOf="@+id/textView4"
              app:layout_constraintTop_toBottomOf="@+id/etxt_username_signup"
              android:layout_marginTop="30.5dp"
              android:id="@+id/textView5"/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:fontFamily="@font/montserrat" android:textSize="15sp"
              android:textColor="#161f3d"
              android:inputType="text"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="30dp" android:layout_marginStart="30dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="30dp" android:layout_marginRight="30dp"
              app:layout_constraintTop_toBottomOf="@+id/textView5" android:id="@+id/etxt_email_signup"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="PASSWORD" android:textSize="10sp" android:lineHeight="10sp"
              android:fontFamily="@font/montserrat"
              android:textColor="#161f3d"
              app:layout_constraintStart_toStartOf="@+id/textView5"
              app:layout_constraintTop_toBottomOf="@+id/etxt_email_signup"
              android:layout_marginTop="30.5dp" android:id="@+id/textView6"/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:fontFamily="@font/montserrat" android:textSize="15sp"
              android:textColor="#161f3d"
              android:id="@+id/etxt_password_signin"
              android:inputType="textPassword"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="30dp" android:layout_marginStart="30dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="30dp" android:layout_marginRight="30dp"
              app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    <Button android:layout_width="0dp" android:layout_height="wrap_content"
            android:background="@drawable/btn_sign" android:text="Sign Up"
            android:textColor="#fff" android:textSize="16sp" android:lineHeight="20sp"
            android:fontFamily="@font/montserrat_bold"

            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/etxt_password_signin"
            android:id="@+id/btn_signup"
            app:layout_constraintStart_toStartOf="@+id/etxt_password_signin"
            app:layout_constraintEnd_toEndOf="@+id/etxt_password_signin"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Already have an account?" android:textSize="13sp" android:fontFamily="@font/montserrat"
              android:textColor="#1d1d26"
              android:id="@+id/textView7"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintEnd_toStartOf="@+id/btn_signin"
              app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginTop="30dp"
              app:layout_constraintTop_toBottomOf="@+id/btn_signup"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Sign in" android:textSize="13sp" android:fontFamily="" android:textColor="#e9446a"
              android:id="@+id/btn_signin"
              app:layout_constraintTop_toTopOf="@+id/textView7"
              app:layout_constraintBottom_toBottomOf="@+id/textView7"
              app:layout_constraintStart_toEndOf="@+id/textView7" android:layout_marginStart="8dp"
              android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>