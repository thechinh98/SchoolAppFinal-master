<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivitySignin">

    <ImageView
            android:id="@+id/bg_blob"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:src="@drawable/blob_bg"
            android:scaleType="fitXY" android:layout_marginTop="0dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/group_4" app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="15dp"
               android:layout_marginStart="15dp" android:layout_marginTop="44dp" android:id="@+id/imageView"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/hi_blob" app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="@+id/bg_blob" android:layout_marginTop="100dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Hello again\nWecomle back"
              android:gravity="center" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
              android:textSize="18sp" android:fontFamily="" android:textColor="#161f3d"
              android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/bg_blob"
              app:fontFamily="@font/montserrat_bold"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="EMAIL ADDRESS" android:textSize="10sp" android:lineHeight="10sp"
              android:textColor="#161f3d"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="30dp"
              android:layout_marginStart="30dp" app:layout_constraintTop_toTopOf="@+id/bg_blob"
              android:layout_marginTop="350dp" app:fontFamily="@font/montserrat" android:id="@+id/textView"/>
    <EditText
            android:id="@+id/etxt_email_signin"
            android:text=""
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat" android:textSize="15sp" android:inputType="text"
            android:textColor="#161f3d"
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toStartOf="@+id/textView" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="30dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/txt_password"
              android:text="PASSWORD" android:textColor="#161f3d" android:textSize="10sp"
              android:lineHeight="10sp"
              app:layout_constraintStart_toStartOf="@+id/textView"
              app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="73dp"/>
    <EditText
            android:id="@+id/etxt_password_signin"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat" android:textSize="15sp" android:inputType="textPassword"
            android:textColor="#161f3d"
            android:text=""
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toStartOf="@+id/txt_password"
            app:layout_constraintTop_toBottomOf="@+id/txt_password"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp"
            app:layout_constraintEnd_toEndOf="@+id/etxt_email_signup" android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Forgot Password" android:textSize="13sp" android:textColor="#161f3d"
              android:fontFamily="@font/montserrat"
              app:layout_constraintEnd_toEndOf="@+id/etxt_password_signin" android:layout_marginEnd="8dp"
              android:layout_marginRight="8dp" app:layout_constraintTop_toBottomOf="@+id/etxt_password_signin"
              app:layout_constraintBottom_toTopOf="@+id/etxt_password_signin"/>
    <Button android:layout_width="0dp" android:layout_height="wrap_content"
            android:background="@drawable/btn_sign" android:text="Sign In"
            android:textColor="#fff" android:textSize="16sp" android:lineHeight="20sp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/etxt_password_signin"
            android:id="@+id/btn_signin"
            app:layout_constraintStart_toStartOf="@+id/etxt_password_signin"
            app:layout_constraintEnd_toEndOf="@+id/etxt_password_signin"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="New to Friendly Desi?" android:textColor="#1d1d26" android:textSize="13sp"
              android:fontFamily="@font/montserrat"
              android:id="@+id/textView2"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintEnd_toStartOf="@+id/btn_signup"
              app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintTop_toBottomOf="@+id/btn_signin"
              android:layout_marginTop="48dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Sign up" android:textColor="#e9446a" android:fontFamily="@font/montserrat"
              android:textSize="13sp"
              android:id="@+id/btn_signup"
              app:layout_constraintTop_toTopOf="@+id/textView2"
              app:layout_constraintBottom_toBottomOf="@+id/textView2"
              app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginStart="8dp"
              android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>